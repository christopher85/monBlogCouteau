<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4" id="put">
            <h1>Modification de l'Article</h1>
            <div class="card">
                <div class="card-body">
                    <form method="POST" action="/{{_id}}?_method=PUT">
                        <div class="form-group">
                            <label>Title</label>
                            <input class="form-control" type="text" name="title" value="{{title}}">
                        </div>
                        <div class="form-group">
                            <label>Content</label>
                            <input class="form-control" type="text" name="content" value="{{content}}">
                        </div>
                        <div class="form-group">
                            <label>cover</label>
                            <input class="form-control" type="file" name="cover" value="{{cover}}">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>

                </div>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>

</div>